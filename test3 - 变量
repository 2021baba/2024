#include <stdio.h>
int a=100;//大括号外为全局变量  

int main()
{
	//创建一个变量
	//int为类型，age为名称 = 0  （或直接类型+名称）
	 
	int age = 20;//大括号内为局部变量 
	double weight = 70.00;
	
	age =age+1;
	weight =weight-10;
	printf("%d\n",age);
	printf("%lf\n",weight);

	return 0;
 } 
 //%d - 整型
 //%f - float
 //%lf -double 
 
 
 //3.变量分类：
 //局部变量 - {}内 使用范围：{}内
 //全局变量 - {}外 使用范围：整个工程 ，在不同的源文件之间调用用extern+变量名声明一下 
 //全局和局部冲突时局部优先 
 
 //生命周期：从创建到销毁
 //局部变量周期在{}内
 //全局变量周期就是程序的生命周期 
